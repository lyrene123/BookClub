@model IEnumerable<BookClubApp.Models.Book>

@{
    ViewBag.Title = "AuthorDetails";
}

<h2>@ViewBag.AuthorName's Books</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Number of Reviews
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {    
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @item.Reviews.Count()
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.BookId })
            </td>
        </tr>
    }
</table>

<div>@Html.ActionLink("Back To Home Page","Index", "Home")</div>


    
